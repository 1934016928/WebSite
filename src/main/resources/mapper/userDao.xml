<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.skyrain.software.website.dao.UserDao">

    <!--设置字段对应用户对象映射-->
    <resultMap id="UserMap" type="com.skyrain.software.website.entity.User">
        <id column="ID" property="id" jdbcType="BIGINT"/>
        <result column="USERNAME" property="userName" jdbcType="VARCHAR"/>
        <result column="ACCOUNT" property="account" jdbcType="VARCHAR"/>
        <result column="PASSWORD" property="password" jdbcType="VARCHAR"/>
        <result column="AGE" property="age" jdbcType="BIGINT"/>
        <result column="SEX" property="sex" jdbcType="BOOLEAN"/>
        <result column="EDUCATION" property="education" jdbcType="VARCHAR"/>
        <result column="JOB" property="job" jdbcType="VARCHAR"/>
        <result column="WORKLIFE" property="workLife" jdbcType="BIGINT"/>
        <result column="PHONE" property="phone" jdbcType="VARCHAR"/>
        <result column="EMAIL" property="email" jdbcType="VARCHAR"/>
        <result column="QQ" property="qq" jdbcType="VARCHAR"/>
        <result column="WX" property="wx" jdbcType="VARCHAR"/>
        <result column="HEAD" property="head" jdbcType="CLOB"/>
        <result column="TYPE" property="type" jdbcType="BIGINT"/>
        <result column="INFO" property="info" jdbcType="CLOB"/>
        <result column="SKILL" property="skill" jdbcType="CLOB"/>
        <result column="MONEY" property="money" jdbcType="DOUBLE"/>
        <result column="INTEGRAL" property="integral" jdbcType="DOUBLE"/>
        <result column="CANAL" property="canal" jdbcType="CLOB"/>
        <result column="PHONEBIND" property="phoneBind" jdbcType="BOOLEAN"/>
        <result column="PROCESS" property="process" jdbcType="BIGINT"/>
        <result column="AUTH" property="auth" jdbcType="BOOLEAN"/>
        <result column="CREATETIME" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="LASTONLINE" property="lastOnline" jdbcType="TIMESTAMP"/>
        <result column="ADMIN" property="admin" jdbcType="BOOLEAN"/>
    </resultMap>

    <!--保存用户账号信息-->
    <insert id="saveUser" parameterType="com.skyrain.software.website.entity.User">
        INSERT INTO users (USERNAME, ACCOUNT, PASSWORD, TYPE, INFO, PHONEBIND)
        VALUES (#{userName}, #{account}, #{passWord}, #{type}, #{info}, #{phoneBind})
    </insert>

    <!--根据用户账查询账户-->
    <select id="queryRepeatAccount" parameterType="String" resultType="String">
        SELECT ACCOUNT
        FROM users
        WHERE ACCOUNT = #{account}
    </select>

    <!--根据昵称查询昵称-->
    <select id="queryRepeatName" parameterType="String" resultType="String">
        SELECT USERNAME
        FROM users
        WHERE USERNAME = #{name}
    </select>

    <!--更新用户最后一次登陆时间-->
    <update id="updateLastTime" parameterType="String">
        UPDATE users
        SET LASTONLINE = NOW()
        WHERE ACCOUNT = #{account}
    </update>

    <!--根据账户查询用户信息-->
    <select id="queryUserByAccount" parameterType="String" resultMap="UserMap">
        SELECT *
        FROM users
        WHERE ACCOUNT = #{account}
    </select>
</mapper> 